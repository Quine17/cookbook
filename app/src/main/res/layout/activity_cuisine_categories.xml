<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- ШАПКА С НАЗВАНИЕМ КУХНИ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#F8F8F8"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="←"
            android:textSize="18sp"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tvCuisineName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Итальянская кухня"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    </LinearLayout>

    <!-- КАТЕГОРИИ БЛЮД -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- КАТЕГОРИЯ 1 -->
            <LinearLayout
                android:id="@+id/category1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/category1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Супы"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/category1_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Минестроне, Страчателла, Паста э фаджиоли"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp"/>

                    <Button
                        android:id="@+id/btn_category1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Смотреть"
                        android:background="#000000"
                        android:textColor="#FFFFFF"
                        android:padding="12dp"
                        android:minWidth="0dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- КАТЕГОРИЯ 2 -->
            <LinearLayout
                android:id="@+id/category2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/category2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Салаты"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/category2_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Капрезе, Панацелла, Инсалата ди рисо"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp"/>

                    <Button
                        android:id="@+id/btn_category2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Смотреть"
                        android:background="#000000"
                        android:textColor="#FFFFFF"
                        android:padding="12dp"
                        android:minWidth="0dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- КАТЕГОРИЯ 3 -->
            <LinearLayout
                android:id="@+id/category3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/category3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пасты"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/category3_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Карбонара, Болоньезе, Песто, Аматричана"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp"/>

                    <Button
                        android:id="@+id/btn_category3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Смотреть"
                        android:background="#000000"
                        android:textColor="#FFFFFF"
                        android:padding="12dp"
                        android:minWidth="0dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- КАТЕГОРИЯ 4 -->
            <LinearLayout
                android:id="@+id/category4_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/category4_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пицца"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/category4_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Маргарита, Пепперони, Четыре сыра, Диабола"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp"/>

                    <Button
                        android:id="@+id/btn_category4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Смотреть"
                        android:background="#000000"
                        android:textColor="#FFFFFF"
                        android:padding="12dp"
                        android:minWidth="0dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- НИЖНЯЯ ПАНЕЛЬ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F0F0F0"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_home_cat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Главная"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <View android:layout_width="1dp" android:layout_height="30dp" android:background="#CCCCCC"/>

        <Button
            android:id="@+id/btn_search_cat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Поиск"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <View android:layout_width="1dp" android:layout_height="30dp" android:background="#CCCCCC"/>

        <Button
            android:id="@+id/btn_favorites_cat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Избранное"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <View android:layout_width="1dp" android:layout_height="30dp" android:background="#CCCCCC"/>

        <Button
            android:id="@+id/btn_profile_cat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Профиль"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>