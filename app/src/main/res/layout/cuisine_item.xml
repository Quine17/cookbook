<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/cuisine_card_background"
    android:padding="16dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/brown_circle"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCuisineTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название кухни"
                android:textColor="#5D4037"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCuisineDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Описание кухни"
                android:textColor="#8D6E63"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Кнопка Выбрать как TextView -->
    <TextView
        android:id="@+id/btnSelectCuisine"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Выбрать"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="#5D4037"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="#5D4037"/>


</LinearLayout>