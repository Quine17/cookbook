<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- ШАПКА -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#F8F8F8"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="←"
            android:textSize="18sp"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ИЗБРАННОЕ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    </LinearLayout>

    <!-- СОДЕРЖИМОЕ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Здесь будут избранные рецепты"
            android:textSize="18sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавляйте рецепты в избранное и они появятся здесь!"
            android:textSize="14sp"
            android:textColor="#999999"
            android:textAlignment="center"/>

    </LinearLayout>

    <!-- НИЖНЯЯ ПАНЕЛЬ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F0F0F0"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_home_favorites"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Главная"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <View android:layout_width="1dp" android:layout_height="30dp" android:background="#CCCCCC"/>

        <Button
            android:id="@+id/btn_search_favorites"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Поиск"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <View android:layout_width="1dp" android:layout_height="30dp" android:background="#CCCCCC"/>

        <Button
            android:id="@+id/btn_favorites_favorites"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Избранное"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>

        <View android:layout_width="1dp" android:layout_height="30dp" android:background="#CCCCCC"/>

        <Button
            android:id="@+id/btn_profile_favorites"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Профиль"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>