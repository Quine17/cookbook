<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ОСНОВНОЙ КОНТЕНТ -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ШАПКА С ПОИСКОМ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#F8F8F8"
                android:gravity="center_vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Поиск..."
                    android:background="@android:drawable/editbox_background"
                    android:padding="12dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Популярные:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"/>

            <!-- Карточка 1 - Итальянская кухня -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F5F5F5"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <!-- Итальянский флаг -->
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_marginEnd="12dp">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#009246"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#CE2B37"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Страсть и простота"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnItalian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выбрать"
                    android:background="#000000"
                    android:textColor="#FFFFFF"
                    android:padding="8dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"/>
            </LinearLayout>

            <!-- Карточка 2 - Китайская кухня -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F5F5F5"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <!-- Китайский флаг -->
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:background="#DE2910"
                    android:layout_marginEnd="12dp">
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Разнообразная и древняя"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnChinese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выбрать"
                    android:background="#000000"
                    android:textColor="#FFFFFF"
                    android:padding="8dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"/>
            </LinearLayout>

            <!-- Карточка 3 - Японская кухня -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F5F5F5"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <!-- Японский флаг -->
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:background="#FFFFFF"
                    android:layout_marginEnd="12dp">
                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#BC002D"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Изящная и гармоничная"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnJapanese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выбрать"
                    android:background="#000000"
                    android:textColor="#FFFFFF"
                    android:padding="8dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnAllCuisines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="показать все кухни"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:padding="12dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- НИЖНЯЯ НАВИГАЦИЯ -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black" />

</RelativeLayout>